<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200"
    tools:context=".ui.fragment.timeline.stl.StepSTLFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_52"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_margin="@dimen/len_10"
        >
        <View
            android:layout_width="@dimen/len_20"
            android:layout_margin="@dimen/len_10"
            android:layout_height="match_parent"
            android:background="@drawable/common_orange_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#F57F17"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/len_10"
            android:text="活动步骤"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:paddingTop="@dimen/len_10"
        android:layout_marginStart="@dimen/len_10"
        android:layout_marginEnd="@dimen/len_10"
        android:layout_marginBottom="@dimen/len_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>